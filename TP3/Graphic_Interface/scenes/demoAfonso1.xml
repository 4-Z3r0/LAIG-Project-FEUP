        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </omni>
 </lights>

    <textures>
		<texture id="metal" file="./scenes/images/metal2.jpg" />
		<texture id="ship" file="./scenes/images/ship1.jpg" />
		<texture id="board" file= "./scenes/images/board2.jpg" />
		<texture id="green" file= "./scenes/images/neon.jpg" />
		<texture id="roxo" file= "./scenes/images/roxo.png" />
		<texture id="table" file="./scenes/images/marmore.jpg" />
		<texture id="garden_table" file="./scenes/images/garden.jpg" />
		<texture id="support" file="./scenes/images/rock_support.jpg" />
		<texture id="stool" file="./scenes/images/toalha.jpg" />
		<texture id="stool_support" file="./scenes/images/stool.jpg" />
		<texture id="floor" file="./scenes/images/grass_floor.jpg" />
		<texture id="fence_grass" file="./scenes/images/fence.jpg"/>
