        <transformationref id="table_transformation2" />
		</transformation>
		<materials>
			 <material id="mat0" />
		</materials>
		<texture id="garden_table" length_s="0.1" length_t="0.2"/>
		<children>
			<primitiveref id="table" />
		</children>
	 </component>

	  <component id="table_foot">
 		<transformation>
		  
		<scale x="50" y="1" z="50"/>
		<translate x="0" y="-60" z="0" />
				  <rotate axis="x" angle="-90" />
		     	<rotate axis="z" angle="-45" />
		</transformation>
		<materials>
			 <material id="mat0" />
		</materials>
		<texture id="support" length_s="2" length_t="1"/>
		<children>
			<primitiveref id="table"/>
		</children>
	 </component>



       <component id="table_leg">
 		<transformation>
             <scale x="10" y="60" z="10" />
            <translate x="0" y="-0.99" z="0" />
 		    <rotate axis="x" angle="-90" />
            <rotate axis="z" angle="-45" />
		</transformation>
		<materials>
			 <material id="mat0" />
		</materials>
		<texture id="metal"  length_s="1" length_t="1"/>
		<children>
			<primitiveref id="table_leg" />
		</children>
	 </component>

	<component id="full_stool1">
