	 </transformation>
	 <materials>
			 <material id="mat0" />
	</materials>
	<texture id="none" length_s="0.1" length_t="0.2"/>
		<children>
			<componentref id="stool" />
			<componentref id="stool_leg1" />
		</children>
	 </component>

	 <component id="full_stool2">
