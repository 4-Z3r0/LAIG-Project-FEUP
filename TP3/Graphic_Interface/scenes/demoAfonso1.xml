	<material id="mat4" shininess = "20" >
		 <emission r="0.2" g="0.2" b="0.2" a="0.8" />
		 <ambient r="0.3" g="0.5" b="0.4" a="1" />
		 <diffuse r="0.3" g="1" b="0.4" a="1" />
		 <specular r="0.3" g="0.3" b="0.3" a="1" />
	 </material>

 </materials>
  
  <transformations>

    <transformation id= "table_transformation">
    <scale x="200" y="5" z="160" />

     <rotate axis="x" angle="-90" />
     <rotate axis="z" angle="-45" />
       </transformation>

	   	<transformation id="floor_transformation">
		 <rotate axis="x" angle= "-90" />
         <translate x="-200" y="-200" z="-60" />
	 </transformation>

	   <transformation id= "table_transformation2">
    <scale x="150" y="5" z="100" />

     <rotate axis="x" angle="-90" />
     <rotate axis="z" angle="-45" />
       </transformation>

    
    <transformation id="tf3">
      <scale x="20" y="500" z="20" />
		<rotate axis="x" angle="-90" />
        <translate x="2" y="-3" z="0" />
	 </transformation>

    <transformation id="tf4">
        <translate x="4" y="0" z="0" />
	 </transformation>

    <transformation id="tf5">
        <translate x="0" y="0" z="3" />
    </transformation>

    <transformation id="tf6">
        <translate x="-4" y="0" z="0" />
	 </transformation>

	  <transformation id="rightWall_transformation">
		<rotate axis="y" angle="90" />
        <translate x="-200" y="-60" z="-200" />
	 </transformation>
 </transformations>

 <animations>

 </animations>

 <primitives>

	<primitive id="world">
        <sphere radius="5" slices="500" stacks="100" />
    </primitive>

	<primitive id="game">
		<game boardTextureId="board" cellTextureId="metal"  idpieceTexture1="green" idpieceTexture2="roxo"/>
	</primitive>

    <primitive id="quad">
 		<rectangle x1="0" y1="0" x2="1" y2="1" />
    </primitive >

	<primitive id="table">
		<cylinder base="0.5" top="0.5" height="1" slices="12" stacks="2" />
    </primitive >

    <primitive id="table_leg">
		<cylinder base="0.5" top="0.5" height="1" slices="4" stacks="5" />
    </primitive >

	<primitive id="floor">
 		<rectangle x1="0" y1="0" x2="400" y2="400" />
    </primitive >

		<primitive id="wall">
 		<rectangle x1="0" y1="0" x2="400" y2="200" />
    </primitive >

 </primitives >

 <components>
 	<component id="root">
		<transformation>
		</transformation>
		<materials>
			 <material id="mat0" />
		</materials>
		<texture id="none" />
		<children>
			<componentref id="full_table"/>
			<componentref id="full_stool1"/>
			<componentref id="full_stool2"/>
			<componentref id="game"/>
			<componentref id="room"/>

		</children>
 	</component>


	<component id="game">
		<transformation>
                <rotate axis="y" angle="-60" />
                <translate x="0" y="5.5" z="0" />
		</transformation>
		<materials>
			 <material id="mat0" />
		</materials>
		<texture id="none" />
		<children>
			<primitiveref id="game"/>
		</children>
 	</component>

	

	   <component id="floor">
 		<transformation>
 			<transformationref id="floor_transformation" />
		</transformation>
		<materials>

		     <material id="mat0" />
		</materials>
			<texture id="floor" length_s="5" length_t="5" />

		<children>
			<primitiveref id="floor" />
		</children>
	 </component>

     <component id="full_table">
	 <transformation>
	 </transformation>
	 <materials>
			 <material id="mat0" />
	</materials>
	<texture id="none" length_s="0.1" length_t="0.2"/>
		<children>
			<componentref id="table" />
			<componentref id="table_leg" />
			<componentref id="table_foot" />

		</children>
	 </component>


	
	  <component id="table">
