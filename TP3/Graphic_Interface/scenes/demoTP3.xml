<yas>
<scene root="root" axis_length="5.0" />

<views default="normal_view" >
	<perspective id="normal_view" near="0.1" far="1000" angle="60">
		 <from x="15.0" y="15.0" z="15.0" />
		 <to x="0.0" y="0.0" z="0.0" />
	</perspective>
	<perspective id="side_view" near="0.1" far="1000" angle="30">
		 <from x="15.0" y="10.0" z="100.0" />
		 <to x="0.0" y="0.0" z="0.0" />
	</perspective>
	<perspective id="up_view" near="0.1" far="1000" angle="30">
		 <from x="15.0" y="100.0" z="10.0" />
		 <to x="0.0" y="0.0" z="0.0" />
	</perspective>
	<ortho id="ortho" near="0.1" far="1000" left="-15" right="15" top="15" bottom="-15" >
 		<from x="15.0" y="15.0" z="15.0" />
 		<to x="0.0" y="0.0" z="0.0" />
 	</ortho>
 </views>

 <ambient>
 	<ambient r="0" g="0" b="0" a="1" />
 	<background r="0.53" g="0.8" b="0.92" a="1" />
 </ambient>

 <lights>

	<omni id="omni1" enabled="1" >                                                     	      
        <location x="-5" y="10" z="5.0" w="1.0" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </omni>
    <omni id="omni2" enabled="1" >                                                     	      
        <location x="4" y="10" z="-8" w="1.0" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </omni>
 </lights>

    <textures>
		<texture id="mountain" file="./scenes/images/mountain.jpg" />
		<texture id="newzealand_text" file="./scenes/images/new-zealand-texture.png"/>
		<texture id="newzealand_map" file="./scenes/images/new-zealand-map.png"/>
		<texture id="ship" file="./scenes/images/ship1.jpg" />
		<texture id="wave_texture" file= "./scenes/images/water_texture.jpg" />
		<texture id="wave_map" file= "./scenes/images/waves.jpg" />
		<texture id="moon" file= "./scenes/images/lua.jpg" />
		<texture id="metal" file= "./scenes/images/metal2.jpg" />
		<texture id="green" file= "./scenes/images/neon.jpg" />
		<texture id="roxo" file= "./scenes/images/roxo.png" />
		<texture id="space" file= "./scenes/images/space.png" />
    </textures>
  
  <materials>
 	<material id="mat1" shininess = "8" >
		 <emission r="0.1" g="0.1" b="0.1" a="0.8" />
		 <ambient r="0" g="0" b="0" a="1" />
		 <diffuse r="0.4" g="0.4" b="0.4" a="1" />
		 <specular r="0.1" g="0.1" b="0.1" a="1" />
	 </material>

 </materials>
  
  <transformations>
	<transformation id="water_transformation">
		  <scale x="30" y="1" z="30" />
	 </transformation>
	<transformation id="terrain_transformation">
        <translate x="0" y="-2.5" z="0"/>
		<scale x="20" y="25" z="20" />
	 </transformation>
 </transformations>

 <animations>
	<linear id="l3" span="0.4">
		<controlpoint x="0.0" y="0.0" z="0.0"/>
		<controlpoint x="0.0" y="0.0" z="-8.0"/>
	</linear>
	<linear id="l2" span="0.6">
		<controlpoint x="0.0" y="0.0" z="0.0"/>
		<controlpoint x="12.0" y="0.0" z="0.0"/>
		<controlpoint x="12.0" y="0.0" z="-8.0"/>
	</linear>
	<linear id="l1" span="1">
		<controlpoint x="0.0" y="0.0" z="0.0"/>
		<controlpoint x="0.0" y="10.0" z="0.0"/>
	</linear>
	<linear id="l4" span="1">
		<controlpoint x="0.0" y="0.0" z="0.0"/>
		<controlpoint x="0.0" y="-8.5" z="1"/>
	</linear>
	<circular id="c1" span="4" center="-3.0 0.0 0.0" radius="3" 
		startang="0" rotang="360"/>
 </animations>

 <primitives>
	<primitive id="vehicle">
		<vehicle />
	</primitive >
	<primitive id="terrain">
		<terrain idTexture= "moon" idheightmap="moon" parts="20" heightscale="0.01" />
	</primitive >

	<primitive id="water">
		<water idTexture= "wave_texture" idwavemap="wave_map" parts="20" heightscale="0.8" texscale="3"/>
	</primitive >

	

    <primitive id="board">
		<board boardTextureId="moon" cellTextureId="metal"/>
    </primitive >

	<primitive id="world">
        <sphere radius="100" slices="200" stacks="10" />
    </primitive>

	<primitive id="game">
		<game boardTextureId="moon" cellTextureId="metal"  idpieceTexture1="green" idpieceTexture2="roxo"/>
	</primitive>

 </primitives >

 <components>
 	<component id="root">
		<transformation>
		</transformation>
		<materials>
			 <material id="mat1" />
		</materials>
		<texture id="none" />
		<children>
			<!--<componentref id="board"/>-->
			<componentref id="space"/>
			<componentref id="game"/>
			<!--<componentref id="piece"/>-->
		</children>
 	</component>

	<component id="board">
		<transformation>
		</transformation>
		<materials>
			 <material id="mat1" />
		</materials>
		<texture id="none" />
		<children>
			<primitiveref id="board"/>
		</children>
 	</component>

	<component id="game">
		<transformation>
		</transformation>
		<materials>
			 <material id="mat1" />
		</materials>
		<texture id="none" />
		<children>
			<primitiveref id="game"/>
		</children>
 	</component>



	


	<component id="space">
		<transformation>
		</transformation>
		<materials>
			 <material id="mat1" />
		</materials>
		<texture id="space" length_s="2" length_t="1" />
		<children>
			<primitiveref id="world"/>
		</children>
 	</component>


	
 </components>
</yas>