<yas>

<scene root="root" axis_length="5.0" />
<views default="p1" >
	<perspective id="p1" near="0.1" far="1000" angle="60">
		 <from x="15.0" y="15.0" z="15.0" />
		 <to x="0.0" y="0.0" z="0.0" />
	</perspective>
	<perspective id="p2" near="0.1" far="1000" angle="30">
		 <from x="15.0" y="10.0" z="100.0" />
		 <to x="0.0" y="0.0" z="0.0" />
	</perspective>
	<perspective id="p3" near="0.1" far="1000" angle="30">
		 <from x="15.0" y="100.0" z="10.0" />
		 <to x="0.0" y="0.0" z="0.0" />
	</perspective>
	<ortho id="o1" near="0.1" far="1000" left="-15" right="15" top="15" bottom="-15" >
 		<from x="15.0" y="15.0" z="15.0" />
 		<to x="0.0" y="0.0" z="0.0" />
 	</ortho>

 </views>

 <ambient>
 	<ambient r="0" g="0" b="0" a="1" />
 	<background r="0" g="0" b="0" a="1" />
 </ambient>


 <lights>

	<omni id="omni1" enabled="1" >                                                     	      
        <location x="10" y="0" z="10.0" w="1.0" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </omni>
    <omni id="omni2" enabled="1" >                                                     	      
        <location x="7" y="8" z="4" w="1.0" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </omni>


      <omni id="omni3" enabled="1" >                                                     	      
        <location x="0" y="0" z="0" w="1.0" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </omni>
       <omni id="omni4" enabled="1" >                                                     	      
        <location x="10" y="0" z="10" w="1.0" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </omni>
      <omni id="omni5" enabled="1" >                                                     	      
        <location x="5" y="0" z="5" w="1.0" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </omni>
        <omni id="omni6" enabled="1" >                                                     	      
        <location x="10" y="0" z="5" w="1.0" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </omni>
      <omni id="omni7" enabled="1" >                                                     	      
        <location x="0" y="0" z="5" w="1.0" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />       
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />       
    </omni>
 </lights>

    <textures>
        <texture id="table" file="./scenes/images/table.png" />
        <texture id="floor" file="./scenes/images/floor_wood.jpg" />
        <texture id="wall" file="./scenes/images/wall.jpg" />
        <texture id="metal" file="./scenes/images/metal.png" />
		<texture id="mountain" file="./scenes/images/mountain.jpg" />
		<texture id="ship" file="./scenes/images/ship2.jpg" />
    </textures>
  <materials>

    <!--material do tampo-->
 	<material id="mat1" shininess = "8" >
		 <emission r="0.2" g="0.2" b="0.2" a="0.8" />
		 <ambient r="0.39" g="0.2" b="0.1" a="1" />
		 <diffuse r="0.39" g="0.2" b="0.1" a="1" />
		 <specular r="0.1" g="0.1" b="0.1" a="1" />
	 </material>

      <!--material das pernas-->
 	<material id="mat2" shininess = "120" >
		 <emission r="0.2" g="0.2" b="0.2" a="0.8" />
		 <ambient r="0.6" g="0.6" b="0.6" a="1" />
		 <diffuse r="0.6" g="0.6" b="0.6" a="1" />
		 <specular r="1" g="1" b="1" a="1" />
	 </material>


      <!--material das paredes-->
 	<material id="mat3" shininess = "4" >
		 <emission r="0.2" g="0.2" b="0.2" a="0.8" />
		 <ambient r="0.9" g="0.8" b="0.6" a="1" />
		 <diffuse r="0.9" g="0.8" b="0.6" a="1" />
		 <specular r="0.1" g="0.1" b="0.1" a="1" />
	 </material>

      <!--material do chao-->
 	<material id="mat4" shininess = "20" >
		 <emission r="0.2" g="0.2" b="0.2" a="0.8" />
		 <ambient r="0.3" g="0.5" b="0.4" a="1" />
		 <diffuse r="0.3" g="0.5" b="0.4" a="1" />
		 <specular r="0.3" g="0.3" b="0.3" a="1" />
	 </material>

 </materials>
  
  <transformations>

	<transformation id="water_transformation">
		  <scale x="20" y="1" z="20" />
	 </transformation>

	<transformation id="terrain_transformation">
         <scale x="10" y="1" z="10" />
	 </transformation>
	 
	 

 </transformations>

 <animations>
	<!--pode ser vazia-->
	<linear id="l2" span="1000">
	<controlpoint x="0.0" y="0.0" z="0.0"/>
		<controlpoint x="10.0" y="0.0" z="10.0"/>
	</linear>

	<linear id="l1" span="10000">
		<controlpoint x="0.0" y="0.0" z="0.0"/>
		<controlpoint x="10.0" y="0.0" z="10.0"/>
		<controlpoint x="0.0" y="0.0" z="0.0"/>
		<controlpoint x="5.0" y="0.0" z="5.0"/>
		<controlpoint x="10.0" y="0.0" z="5.0"/>
		<controlpoint x="0.0" y="0.0" z="5.0"/>
        <controlpoint x="5.0" y="0.0" z="5.0"/>
	</linear>

	<circular id="c1" span="5000" center="0.0 0.0 0.0" radius="1.0" 
		startang="10.0" rotang="180"/>
 </animations>

 <primitives>
 	<primitive id="rectangle">
 		<rectangle x1="0" y1="0" x2="11" y2="11" />
    </primitive >

    <primitive id="quad">
 		<rectangle x1="0" y1="0" x2="1" y2="1" />
    </primitive >

	<primitive id="cylinder">
		<cylinder base="0.4" top="0.2" height="3" slices="20" stacks="5" />
    </primitive >

	<primitive id="sphere">
		<sphere radius="0.5" slices="60" stacks="60" />
    </primitive >

	<primitive id="triangle">
		<triangle x1="1" y1="1" z1="1"
				  x2="2" y2="1" z2="1"
				  x3="1" y3="2" z3="1" />
    </primitive >

	<primitive id="torus">
		<cylinder2 base="0.4" top="0.2" height="0.6" slices="20" stacks="5" />
	</primitive >

	<primitive id="plane">
		<plane npartsU="2" npartsV="2" />
	</primitive >

	<primitive id="patch">
		<patch npointsU="3" npointsV="2" npartsU="20" npartsV="20">
			<controlpoint x="-1.5" y="-1.5" z="0.0"/>
			<controlpoint x="-1.5" y="1.5" z="0.0"/>
			<controlpoint x="0" y="-1.5" z="3.0"/>
			<controlpoint x="0" y="1.5" z="3.0"/>
			<controlpoint x="1.5" y="-1.5" z="0.0"/>
			<controlpoint x="1.5" y="1.5" z="0.0"/>
		</patch>
	</primitive >

	<primitive id="cylinder2">
		<cylinder2 base="1" top="0.2" height="10" slices="20" stacks="5" />
	</primitive >

	<primitive id="cylinder1">
		<cylinder base="1" top="0.2" height="10" slices="20" stacks="5" />
	</primitive >


	<primitive id="vehicle">
		<vehicle />
	</primitive >

	<primitive id="terrain">
		<terrain idTexture= "mountain" idheightmap="mountain" parts="20" heightscale="1" />
	</primitive >

	<primitive id="water">
		<water idTexture= "metal" idwavemap="metal" parts="2" heightscale="2" texscale="2"/>
	</primitive >

 </primitives >


 <components>

 	<component id="root">
		<transformation>
		</transformation>
		<materials>
			 <material id="mat2" />
			 <material id="mat1" />
			 <material id="mat2" />
		</materials>
		<texture id="metal" length_s="2" length_t="1" />

		<children>
			<componentref id="water"/>
			<componentref id="mountain"/>
			<componentref id="ship"/>

		</children>

 	</component>

	  <component id="water">
	 	<transformation>
		 	<transformationref id="water_transformation"/>
		</transformation>
		<animations>		
		</animations>
		<materials>
			 <material id="inherit" />
		</materials>
		<texture id="metal" length_s="2" length_t="1" />
		<children>
			<primitiveref id="water"/>
		</children>
	 </component>

	<component id="mountain">
	 	<transformation>
		 			<transformationref id="terrain_transformation"/>
		</transformation>
		<animations>
		</animations>
		<materials>
			 <material id="inherit" />
		</materials>
		<texture id="metal" length_s="2" length_t="1" />
		<children>
			<primitiveref id="terrain"/>
		</children>
	 </component>


	  <component id="ship">
	 	<transformation>
		 	<translate x="0" y="5.0" z="0"/>
		</transformation>
		<animations>
			<animationref id = "l1"/>	
			<animationref id = "l1"/>	
		</animations>
		<materials>
			 <material id="inherit" />
		</materials>
		<texture id="ship" length_s="2" length_t="1" />
		<children>
			<primitiveref id="vehicle"/>
		</children>
	 </component>




 </components>
 
</yas>